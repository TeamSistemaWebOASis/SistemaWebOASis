@model SitioWebOasis.Models.DatosAsignaturasDocenteModel

@{
    ViewBag.Title = "Docente";
}

@section AddToHead{
    <link href="@Url.Content("~/Content/css/skins/slategray.css")" rel="stylesheet" type="text/css" />
}

@section scripts{
    @*  JAVASCRIPT DE GESTION GRAFICOS DE RENDIMIENTO ACADEMICO  *@
    <script src="~/Content/js/Docentes/DocentesCharts.js?v0.0.4"> </script>
    <script src="~/Content/js/Docentes/NominaEstudiantes.js?v0.0.4"> </script>
}

<div class="main-content">
    
    <div class="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="contextual-summary-info">
                    <i class="fa fa-book"></i>
                    <p class="pull-right"><span> <strong> @Model.getFacultadCarreraDocente() / @Model.UsuarioActual.CarreraActual.SedeCarrera </strong> </span> @Model.getNombreDocente() </p>
                </div>
            </div>
        </div>
    </div>

    <div class="widget widget-table">
        <div class="widget-header">
            <h3><i class="fa fa-book"></i> @Language.es_ES.DOC_LBL_ASIGNATURAS &nbsp;</h3>

            <div class="widget-header-toolbar">
                <div class="label label-default" style="font-size: small;">
                    <i class="fa fa-clock-o"></i> @Language.es_ES.EST_LBL_PERIODO_ACADEMICO: &nbsp;@Model.getPeriodoAcademicoVigente()
                </div>
            </div>
        </div>

        <div class="widget-content">
            <div id="ticket-table_wrapper" class="dataTables_wrapper form-inline no-footer">
                <div id="msmLstAsignaturas" hidden="hidden"></div>

                @* TABLA DE ASIGNATURA DOCENTES *@
                <table  id="asignaturasDocente" 
                        class="table table-striped table-hover" 
                        role="grid">

                    <thead>
                        <tr>
                            <th rowspan="2" style="align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_NUMERO </th>
                            <th rowspan="2" style="align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_ASIGNATURA</th>
                            <th rowspan="2" style="align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_NIVEL</th>
                            <th rowspan="2" style="align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_PARALELO</th>
                            <th rowspan="2" style="align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_PARCIAL_ACTIVO</th>
                            <th data-toggle="tooltip" data-placement="top" data-original-title="@Language.es_ES.DOC_TB_COL_NUM_ESTUDIANTES_TOOLTIP" aria-describedby="tooltip840829" style="align-content: center; vertical-align: middle; text-align: center;" colspan="2">@Language.es_ES.DOC_TB_COL_ESTUDIANTES</th>
                            <th rowspan="2" data-toggle="tooltip" data-placement="top" data-original-title="@Language.es_ES.DOC_TB_COL_RENDIMIENTO_ACADEMICO_TOOLTIP" aria-describedby="tooltip840829" style="align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_RENDIMIENTO_ACADEMICO</th>
                        </tr>

                        <tr role="row">
                            <th data-toggle="tooltip" data-placement="top" data-original-title="@Language.es_ES.DOC_TB_COL_ESTUDIANTES_CANTIDAD_TOOLTIP" aria-describedby="tooltip840829" style="width: 90px; align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_ESTUDIANTES_CANTIDAD</th>
                            <th data-toggle="tooltip" data-placement="top" data-original-title="@Language.es_ES.DOC_TB_COL_ESTUDIANTES_NOMINA_TOOLTIP" aria-describedby="tooltip840829" style="width: 100px; align-content: center; vertical-align: middle; text-align: center;">@Language.es_ES.DOC_TB_COL_ESTUDIANTES_NOMINA</th>
                        </tr>
                    </thead>

                    <tbody>
                        @* ASIGNATURAS DOCENTE *@
                        @Html.Raw(Model.getHTMLAsignaturasDocente())
                    </tbody>

                </table>

                <div class="row"></div>
            </div>
        </div>
    </div>
</div>